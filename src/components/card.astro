---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<div class="card">
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style>
  .card {
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 25px 50px 0 rgba(0, 0, 0, 0.1);
    margin-block: 10px;
    padding: 20px;
    width: 300px;
  }
</style>
